<div class="jumbotron">
  <div class="tabbable">
    <ul class="nav nav-tabs nav-justified">

      <li class="active"><a href="#alchemy_tab"  data-toggle="tab">
        <h2> Users reaction to this post</h2>
      </a></li>
    </ul>
  </div>

  <div class="tab-content">
    <div id="content_tab" class="tab-pane">

    </div>

    <div id="alchemy_tab" class="tab-pane active">
      <div class="chart-sentiments">
            <div class="text-left"> <%= fa_icon "thumbs-o-up"%> <strong>  Likes: </strong>  <%= @post.likes %> </div> 
      <div class="text-left"><%= @post.content %></div><br/>
        <%= bar_chart @sentiment_data, colors: ["blue", "#999"]  %><br/>
        <% if @post.feed.provider=="facebook" %>

         <table class="table table-striped">
            <tr>
              <th class="text-left" >Story</th>
            </tr>
            <% @comments.each do |c| %>
            <tr>
              <td class="text-left">
              <%= c["message"] %>
              </td>
            </tr>
            <% end %>
            <% end %>

      </div>
    </div>
  </div>
</div>





